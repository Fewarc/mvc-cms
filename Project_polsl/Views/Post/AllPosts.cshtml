@model List<Post> 

@{
    var posts = Model;
}

<div>
    <div style="margin: 40px 0px; font-size: 36px;">Posts</div>
    <div class="flex" style="margin-bottom: 40px;">
        <div style="margin-right: 20px;">Serach posts: </div>
        <input type="text" id="post-filter"/>
        <input type="button" value="Search" id="filter-posts"/>
    </div>
    <div class="flex flex-col" style="row-gap: 20px; margin-bottom: 60px;">
        @foreach (var post in posts)
        {
            var path = "/uploaded/" + post.Thumbnail;

            <a href="@Url.Action("ViewPost", "Post", new { id = post.Id })" class="post-card flex">
                <img src="@path" alt="@path" class="post-thumbnail"/>
                <div class="flex items-center" style="padding: 0px 20px; font-size: 36px; font-weight: lighter;">
                    <div>
                        @post.Title
                    </div>
                </div>
            </a>
        }
    </div>
</div>